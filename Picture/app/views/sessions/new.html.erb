<%= provide(:page_title,'Login') %>	
<%= provide(:about_active,'active') %>
<div class="row">
	<div class="col-lg-4"></div>
	<div class="col-lg-4">
		<div class="form-group">
		  <%= form_tag sessions_path do%>
			<h5>Username</h5>
		    	<%= text_field_tag :username,"", class: 'form-group', :style => 'width: 103%; height:40px', :required => true %>

		    <h5>Password</h5>
		    	<%= password_field_tag :password,"", class: 'form-group', :style => 'width: 103%; height:40px', :required => true %> 

		    <div class="active">
			    <p><%= submit_tag 'Submit' , :class => 'btn btn-success', :style => "padding-left: 162px;padding-right: 162px;"%></p>
			</div>
		  <% end%>
		</div>
	</div>
</div>
		
