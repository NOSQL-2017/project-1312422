<%= form_tag users_path do %>

  <div class="row">
    <div class="col-lg-6">

      <h5>Username</h5>
      <%= text_field_tag :username, nil, class: 'form-group', style: 'width: 70%; height:40px' %>

      <h5>Password</h5>
      <%= password_field_tag :password, nil, :class => 'form-group', :style => 'width: 70%; height:40px'%>

      <h5>Your name</h5>
      <%= text_field_tag :name, nil, :class => 'form-group', :style => 'width: 70%; height:40px' %>


      <h5></h5>
    </div>
    <div class="col-lg-6">

      <h5>Gender</h5>
      <%= select_tag(:gender, options_for_select([['female', 2], ['male', 1]]), {class: "form-control", :style => 'width: 70%; height:40px'}) %>
      <h5>Email</h5>
      <%= text_field_tag :email, nil, :class => 'form-group', :style => 'width: 70%; height:40px'%>

      <h5>Avatar</h5>
      <%= file_field_tag :avatar, :class => 'form-group', :style => 'width: 70%; height:40px'%>

    </div>
  </div>
    
  <div class="actions">
      <%= submit_tag 'Submit' , :class => 'btn btn-success' %>
  </div>
<% end %>
